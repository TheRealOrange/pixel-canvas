<html>
<head>
<%include partials/header.ejs%>
</head>
<body>
<h1 id="title">Pixel Canvas</h1>
<button id="start">Press me</button>
<canvas id="pc"></canvas>
<script>
const ctx = document.getElementById("pc").getContext("2d");
var w = 20+(window.width||window.innerWidth);
var h = 20+(window.height||window.innerHeight);
$("#pc").attr({
    height: h,
    width: w
});
ctx.fillStyle="#def";
ctx.rect(0,0,w,h);
ctx.fill();

function triangle(colour) {
    ctx.beginPath();
    ctx.moveTo(w/2,h/2);
    ctx.lineTo(w/2-20,h/2-Math.sqrt(1200));
    ctx.lineTo(w/2+20,h/2-Math.sqrt(1200));
    ctx.lineTo(w/2,h/2);
    ctx.fillStyle=colour;
    ctx.fill();
    ctx.closePath();
}

triangle("#135")

$("#start").click(function(){
    $("#pc").addClass("start")
    $("#start, #title").fadeOut(200);
})
</script>
</body>
</html>